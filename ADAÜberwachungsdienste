import ADA55Dienstüberwachung
import checkFileChange 
import checkIfFileExist

def abfrage():
    print("Dies ist ein Programm zur Überwachung von Dateien. Sie können entweder Dateien auf Änderungen überwachen, das letze Änderungsdatum von Dateien überwachen oder prüfen, ob eine bestimmte Datei erstellt wurde.")
    while True:
        print("Geben Sie nun die entsprechende Zahl ein: ")
        print("1 : Dateien auf Änderungen überwachen")
        print("2 : Das letzte Änderungsdatum von Dateien überwachen")
        print("3 : Überwachen, ob bestimmte Dateien existieren")
        eingabe = input()
        if eingabe in ('1','2','3'):
            return int(eingabe)
        print("Ungültige Eingabe")

if __name__=="__main__":
    auswahl = abfrage()
    if auswahl == 1:
        checkFileChange.checkFileChange()
    elif auswahl == 2:
        ADA55Dienstüberwachung.ADA55Dienstueberwachung()
    elif auswahl == 3:
        checkIfFileExist.checkIfFileExist()
    
